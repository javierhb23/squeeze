{
    "name": "Squeeze",
    "manifest_version": 3,
    "version": "0.1",
    "description": "Make old-school websites readable on wide displays by limiting their width",
    "permissions": ["activeTab", "scripting", "storage", "webNavigation"],
    "action": {
        "default_icon": {
            "32": "images/logo32.png"
        },
        "default_popup": "popup/index.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "type": "module",
        "service_worker": "service-worker/service-worker.js"
    }
}